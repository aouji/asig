<h1>Discussions</h1>
<table>
	<th>Title</th>
	<th>Description</th>
	<% @discussions.each do |discussion| %>
	<tr>
	<td> <%= link_to discussion.title, discussion %> </td>
	<td> <%= discussion.description %></td>
	<td><%= link_to "Edit",edit_discussion_path(discussion),class: 'btn btn-default' %></td>
	<td><%= link_to "Remove",discussion_path(discussion), method: 'delete',confirm: "Are you sure you want to remove discussion "+(discussion.id).to_s+"?",class: 'btn btn-default' %></td>
	</tr>
	<% end %>
</table>
<%= link_to "New",new_discussion_path,class: 'btn btn-default' %>
<%= link_to "Projects",projects_path,class: 'btn btn-default' %>

