<!DOCTYPE html>
<html>
<%= render "layouts/head" %>
<body>
<div class='container'>
	<div class="page-header">
	<% if session[:loggedin]=='true' %>
		<%= link_to "Logout",logout_path,method: 'post',class: 'btn btn-default' %>
	<% else %>
		<%= link_to "Login",login_path,method: 'post',class: 'btn btn-default' %>
	<% end %>
</div>
	<%=render "/layouts/flash" %>
<%= yield %>
</div>
</body>
</html>
