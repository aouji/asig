<%= form_for @proj do |f| %>
	<% if @proj.errors.any? %>
		<ul>
		<% @proj.errors.full_messages.each do |message| %>
			<li class='rederror'><%= message %></li>
		<% end %>
		</ul>
	<% end %>
	<div><%= f.label :title, "Project's title" %>
	<br>
	<%= f.text_field :title%>
	</div>
	<br>
	<div>
	<%= f.label :description, "Project's description" %>
	<br>
	<%= f.text_area :description  %>
	</div>
	<br>
	<%= f.submit "Save" %>

<% end %>